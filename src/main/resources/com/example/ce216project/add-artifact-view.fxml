<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="addArtifactPane" alignment="CENTER" hgap="10" styleClass="grid-pane" stylesheets="@styles/add-artifact-style.css" vgap="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ce216project.AddArtifactViewController">

    <Label style="-fx-font-weight: bold;" text="Enter attributes:" GridPane.columnSpan="2" />

    <Label text="Enter artifact name:" GridPane.rowIndex="1" />
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Enter artifact category:" GridPane.rowIndex="2" />
    <TextField fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Enter civilization:" GridPane.rowIndex="3" />
    <TextField fx:id="civilizationField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Enter discovery location:" GridPane.rowIndex="4" />
    <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Enter composition:" GridPane.rowIndex="5" />
    <TextField fx:id="compositionField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Enter discovery date:" GridPane.rowIndex="6" />

    <Label text="Enter current place:" GridPane.rowIndex="7" />

    <Label text="Enter dimensions:" GridPane.rowIndex="8" />
    <TextField fx:id="dimensionsField" GridPane.columnIndex="1" GridPane.rowIndex="8" />

    <Label text="Enter weight:" GridPane.rowIndex="9" />
    <TextField fx:id="weightField" GridPane.columnIndex="1" GridPane.rowIndex="9" />

    <Label text="Enter tags:" GridPane.rowIndex="10" />
    <TextField fx:id="tagsField" GridPane.columnIndex="1" GridPane.rowIndex="10" />

    <Label text="Select picture" GridPane.rowIndex="11" />

    <Button onAction="#onCreateArtifact" text="Create" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
   <DatePicker fx:id="dateField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
   <TextField fx:id="placeField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
   <Button fx:id="imageButton" mnemonicParsing="false" onAction="#onSelectImage" GridPane.columnIndex="1" GridPane.rowIndex="11">
      <graphic>
          <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
      </graphic>
   </Button>

   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</GridPane>
