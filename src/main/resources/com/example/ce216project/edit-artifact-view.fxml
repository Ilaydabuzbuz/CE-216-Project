<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="addArtifactPane" alignment="CENTER" hgap="10" styleClass="grid-pane" stylesheets="@styles/add-artifact-style.css" vgap="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ce216project.EditArtifactViewController">

    <Label style="-fx-font-weight: bold;" text="Edit attributes:" GridPane.columnSpan="2" />

    <Label text="Edit artifact name:" GridPane.rowIndex="1" />
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Edit artifact category:" GridPane.rowIndex="2" />
    <TextField fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Edit civilization:" GridPane.rowIndex="3" />
    <TextField fx:id="civilizationField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Edit discovery location:" GridPane.rowIndex="4" />
    <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Edit composition:" GridPane.rowIndex="5" />
    <TextField fx:id="compositionField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Edit discovery date:" GridPane.rowIndex="6" />

    <Label text="Edit current place:" GridPane.rowIndex="7" />

    <Label text="Edit dimensions:" GridPane.rowIndex="8" />
    <TextField fx:id="dimensionsField" GridPane.columnIndex="1" GridPane.rowIndex="8" />

    <Label text="Edit weight:" GridPane.rowIndex="9" />
    <TextField fx:id="weightField" GridPane.columnIndex="1" GridPane.rowIndex="9" />

    <Label text="Edit tags:" GridPane.rowIndex="10" />
    <TextField fx:id="tagsField" GridPane.columnIndex="1" GridPane.rowIndex="10" />

    <Label text="Edit picture:" GridPane.rowIndex="11" />

    <Button text="Save" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
    <DatePicker fx:id="dateField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <TextField fx:id="placeField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
    <Button fx:id="imageButton" mnemonicParsing="false" onAction="#onSelectImage" GridPane.columnIndex="1" GridPane.rowIndex="11">
        <graphic>
            <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
        </graphic>
    </Button>

    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
</GridPane>
